<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AveCaesarApp">

    <Style TargetType="Border" x:Key="HomeBorderStyle">
        <Setter Property="BorderThickness" Value="4" />
        <Setter Property="BorderBrush" Value="#FF024300"/>
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="Margin" Value="35,0,30,30" />
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="White" Opacity="0.44"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="PaleGreen" Opacity="0.44"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>