<UserControl x:Class="AveCaesarApp.UserControls.BindableWatermarkPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AveCaesarApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_OnPasswordChanged" BorderThickness="0"/>
        <TextBlock x:Name="WatermarkTextBlock" FontWeight="Light" Margin="3,0,0,0"  HorizontalAlignment="Left" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
