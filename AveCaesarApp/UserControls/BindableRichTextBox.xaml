<UserControl x:Class="AveCaesarApp.UserControls.BindableRichTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AveCaesarApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="{StaticResource MainGreenColor}" CornerRadius="5" BorderThickness="2" Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <RichTextBox x:Name="RichTextBox"  BorderThickness="0" TextChanged="RichTextBox_OnTextChanged">
                    <FlowDocument>
                        <Paragraph Margin="0"/>
                    </FlowDocument>
                </RichTextBox>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
