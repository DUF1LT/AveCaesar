<Window x:Class="AveCaesarApp.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AveCaesarApp"
        mc:Ignorable="d"
        Title="Ave Caesar" Height="450" Width="800" MinWidth="800" MinHeight="480" Icon="/Images/LogoIcon.png"  FontFamily="Source Serif Pro">
    <Window.Background>
        <ImageBrush ImageSource="Images/Background.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Images/Logo.png" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="30,20,10,20"></Image>
        <TextBlock x:Name="SubTextBox" TextWrapping="Wrap" TextAlignment="Center" Foreground="#FFF7FFF3" Grid.ColumnSpan="2"
                   Grid.Column="0" Grid.Row="2" FontFamily="Source Serif Pro" MaxWidth="350" FontSize="20"
                   SizeChanged="SubTextBox_OnSizeChanged">
            <Run >Самая крупная сеть ресторанов</Run>
            <Run FontWeight="Bold">правильного питания </Run>
            <Run>в Беларуси</Run>
        </TextBlock>
        <StackPanel x:Name="AuthorizationStackPanel" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="30,0,0,0" SizeChanged="AuthorizationStackPanel_OnSizeChanged">
            <TextBlock x:Name="LogInLabel" FontSize="23" FontFamily="Source Serif Pro" TextAlignment="Center" Foreground="#FF024300" FontWeight="Bold">Вход в систему</TextBlock>
            <Border x:Name="LoginTextBoxBorder"  BorderBrush="#FF024300" BorderThickness="0.9"  Margin="60,10,60,10" CornerRadius="10">
                <TextBox x:Name="LoginTextBox"  ToolTip="Логин" BorderBrush="{x:Null}" Margin="5,2,5,2"
                     BorderThickness="0" GotFocus="LoginTextBox_OnGotFocus" LostFocus="LoginTextBox_OnLostFocus"
                      FontWeight="Regular" FontFamily="Source Serif Pro" FontSize="17" Padding="7" SizeChanged="LoginTextBox_OnSizeChanged"/>
            </Border>
            <Border x:Name="PasswordTextBoxBorder" BorderBrush="#FF024300" BorderThickness="0.9"  Margin="60,10,60,10" CornerRadius="10">
                <TextBox x:Name="PasswordTextBox"  ToolTip="Логин" BorderBrush="{x:Null}" Margin="5,2,5,2"
                         BorderThickness="0" GotFocus="PasswordTextBox_OnGotFocus" LostFocus="PasswordTextBox_OnLostFocus" 
                         FontWeight="Regular" FontSize="17" Padding="7" SizeChanged="PasswordTextBox_OnSizeChanged"/>
            </Border>
            <Border x:Name="LogInButtonBorder" Background="#FF024300" Margin="110,10,110,0" Padding="0,5,0,5" CornerRadius="13" Cursor="Hand">
                <Button x:Name="LogInButton" BorderBrush="{x:Null}" Foreground="#FFF7FFF3" Background="{x:Null}" FontSize="18" IsHitTestVisible="False" SizeChanged="LogInButton_OnSizeChanged">Войти</Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>
