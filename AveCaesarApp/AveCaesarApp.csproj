<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts\SourceSerifPro\SourceSerifPro-Bold.ttf" />
    <None Remove="Fonts\SourceSerifPro\SourceSerifPro-Regular.ttf" />
    <None Remove="Images\Background.png" />
    <None Remove="Images\Logo.png" />
    <None Remove="Images\LogoIcon.png" />
    <None Remove="Images\MainWindowBackground.png" />
    <None Remove="Images\MainWindowExit.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\Logo.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\SourceSerifPro\SourceSerifPro-Bold.ttf" />
    <Resource Include="Fonts\SourceSerifPro\SourceSerifPro-Regular.ttf" />
    <Resource Include="Images\Background.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\LogoIcon.png" />
    <Resource Include="Images\MainWindowBackground.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\MainWindowExit.png" />
  </ItemGroup>

</Project>
